<!-- res/drawable/rounded_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@color/white"/> <!-- Replace with your preferred color -->

    <!-- Corner radius for rounded effect -->
    <corners android:radius="50dp"/> <!-- Adjust radius as needed -->

    <!-- Optional padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>

</shape>
